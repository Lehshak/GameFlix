<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <title>GameFlix Trivia - Games</title>
</head>
<style>
  .container {
    width: 80%;
    margin: auto;
    padding: 20px;
    background-color: #eef2f5;
    color: #000000; /* Light text color */
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    margin-top: 20px;
}

body {
  background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
  background-size: 400% 400%;
  animation: gradient 15s ease infinite;
  height: 100vh;
}

@keyframes gradient {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}
</style>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-primary">
      <a class="navbar-brand" href="#">GameFlix Trivia</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/trivia">Trivia</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/analysis">MoviePopularityGame</a>
        </li>
          <li class="nav-item active">
            <a class="nav-link" href="/games">Games</a>
          </li>
    
          <li class="nav-item">
            <a class="nav-link" href="/movies">Movies</a>
          </li>
        </ul>
      </div>
    </nav>

  
    <div class="container">
      <h1>Game List</h1>

      <form action="/games" method="get">
          <input type="text" name="search" placeholder="Search for a game" value="<%= searchQuery %>">
          <button type="submit">Search</button>
      </form>

      <br>

      <% games.forEach(game => { %>
        <div class="game">
          <h3><%= game.name %></h3>

          <p><strong>Game Description:</strong> <%= game.game_description || 'N/A' %></p>
      
          <p><strong>Genres:</strong> <%= (game.genre && Array.isArray(game.genre)) ? game.genre.join(', ') : (typeof game.genre === 'string' ? game.genre : 'N/A') %></p>
      
          <p><strong>Release Date:</strong> <%= game.release_date ? new Date(game.release_date).toLocaleDateString() : 'N/A' %></p>
          <p><strong>Developer:</strong> <%= game.developer || 'N/A' %></p>
          <p><strong>Publisher:</strong> <%= game.publisher || 'N/A' %></p>
      
          <p><strong>Languages:</strong> <%= (game.languages && Array.isArray(game.languages)) ? game.languages.join(', ') : (typeof game.languages === 'string' ? game.languages : 'N/A') %></p>
      
          <p><strong>Recommended Requirements:</strong> <%= game.recommended_requirements || 'N/A' %></p>
      
          <p><strong>Price:</strong> <%= game.discount_price || game.original_price || 'N/A' %></p>
      
          <a href="<%= game.url %>" target="_blank">View on Steam</a>
      </div>
          <hr>
      <% }); %>
  </div>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>

</body>
</html>